---
import {Button} from './button.tsx';
const { title, tag_line, image, type_true, p_button, s_button  } = Astro.props;
---
<section
    class="bg-black bg-cover bg-center py-12 md:py-24 lg:py-32"
>
    <div class="container mx-auto px-4 md:px-6">
        <div class="grid md:grid-cols-2 gap-8 items-center">
            <div class="space-y-4">
                <h1
                    class="text-4xl capitalize text-white font-bold tracking-tighter sm:text-5xl md:text-6xl"
                >
                    {title} <br/><span id="element"></span>
                </h1>
                <p class="text-lg text-primary-foreground/80">
                    {tag_line}
                </p>
                { p_button.show ? <Button variant="default" className='capitalize'>{p_button.text}</Button> : null}
                { s_button.show ? <Button variant="outline" className="capitalize bg-black text-white">{s_button.text}</Button> : null}
            </div>
            <img
                src={image}
                width={600}
                height={400}
                alt="IIITV Gymkhana"
                class="rounded-xl object-cover"
            />
        </div>
    </div>
</section>
{ type_true ? <script>
    var typed = new Typed('#element', {
      strings: ['IIITV Gymkhana ^1000'],
      typeSpeed: 80,
      backSpeed: 50,
      smartBackspace: true,
      loop: true,
    }); 
</script> : null
}